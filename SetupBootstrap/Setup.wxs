      UninstallCommand="/uninstall /passive /norestart /ChainingPackage Bootstrapper"
      PerMachine="yes"
      DetectCondition="NETFRAMEWORK40"
      Id="NetFx40Web"
      Vital="yes"
      Permanent="yes"
      Protocol="netfx4"
      DownloadUrl="$(var.NetFx40WebLink)"
