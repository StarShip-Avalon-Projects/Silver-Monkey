<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
   xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
<Bundle Name="Bootstrapper" Version="1.0.0.0" Manufacturer="Billy"
        UpgradeCode="8C1601FA-26C9-4458-9757-FC8902EB560E">

	<BootstrapperApplicationRef
  Id="ManagedBootstrapperApplicationHost">
  <Payload
    Name="BootstrapperCore.config"
    SourceFile="BootstrapperCore.config"/>
  <Payload
    SourceFile="$(var.Setup.TargetPath)"/>
</BootstrapperApplicationRef>
	
	<Chain>

    <PackageGroupRef Id="PassiveNetFx40Web"/>

    <!-- Install Application -->
    <MsiPackage Id="SilverMonkey" SourceFile="$(var.Setup.TargetPath)"/>

  </Chain>
</Bundle>

<Fragment>
